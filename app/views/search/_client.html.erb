<div class="row">
  <%= link_to(client) do %>
    <div class="data">
      <div class="code"><%= client.client_code %></div>
      <div class="name"><%= client.name %></div>
    </div>
  <%- end %>
  <div class="controls">
    <ul>
      <li><%= link_to 'Edit', edit_client_path(client), :class => 'edit-link tooltip', :title => 'Edit this client' %></li>
      <li><%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete, :class => 'destroy-link tooltip', :title => 'Delete this client' %></li>
    </ul>
  </div>
  <div class="clear"></div>
</div>
