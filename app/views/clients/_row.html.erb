<div class="row">
  <%= link_to(row) do %>
    <div class="data">
      <div class="code"><%= row.client_code %></div>
      <div class="name"><%= row.name %></div>
    </div>
  <%- end %>
  <div class="controls">
    <ul>
      <li><%= link_to 'Edit', edit_client_path(row), :class => 'edit-link tooltip', :title => 'Edit' %></li>
      <li><%= link_to 'Destroy', row, :confirm => 'Are you sure?', :method => :delete, :class => 'destroy-link tooltip', :title => 'Delete' %></li>
    </ul>
  </div>
  <div class="clear"></div>
</div>
