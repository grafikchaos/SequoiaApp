<%= form_for(@client, :html => { :multipart => true }) do |f| %>
  <% if @client.errors.any? %>
    <% @client.errors.full_messages.each do |msg| %>
      <script type="text/javascript">
        postNotice("<%= msg %>", 'error');
      </script>
    <% end %>
  <% end %>

  <%= render 'form_fields', :f => f %>    

  <%- if @client.new_record? -%>
    <%= field_set_tag "First Project", :class => "collapsible" do %>
      <div class="fieldset-wrapper">
        <%= f.fields_for :projects do |project_form| %>
          <%= render 'projects/form_fields', :f => project_form %>
        <% end %>
      </div>
    <% end %>
  <%- end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
