<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <script type="text/javascript">
      postNotice('<%= pluralize(@client.errors.count, "error") %>', 'error');
    </script>
    <div id="error_explanation">
      <h2>:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :client_code %><br />
    <%= f.text_field :client_code %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
