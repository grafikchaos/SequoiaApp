<%= form_for(@entity_key, :html => { :class => 'form' }) do |f| %>
  <%= render "shared/form_errors", :f => f  %>

  <div class="group required">
    <%= f.label :name, :class => 'label' %>
    <%= f.text_field :name %>
  </div>

  <div class="checkbox group">
    <%= f.label :mask, 'Mask these types of entries?', :class => 'tooltip label', 'data-tooltip' => 'Masking simply hides these values from view. Useful for passwords, etc.' %>
    <%= f.check_box :mask %>
  </div>

  <div class="group">
    <%= f.submit :class => 'button' %>
  </div>
<% end %>
