<%= content_for :page_title, "Projects for #{@client.name}" %>
<%= content_for :display_title, "Projects for #{@client.name}" %>

<table>
  <tr>
    <th>Project Name</th>
    <th>Domain</th>
    <th colspan="2">Actions</th>
  </tr>

<%- is_not_only_project = @projects.count > 1 ? true : false %>
<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.domain %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :class => 'edit-link tooltip', :title => 'Edit this project' %></td>
    <%- if is_not_only_project and can? :destroy, project %>
      <td><%= link_to 'Delete', project, :confirm => 'Are you sure you want to delete this project?', :method => :delete, :class => 'destroy-link tooltip', :title => 'Delete this project' %></td>
    <%- end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_client_project_path %>
