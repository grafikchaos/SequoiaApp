<%= content_for :page_title, "Projects for #{@client.name}" %>
<%= content_for :display_title, "Projects for #{@client.name}" %>

<table>
  <tr>
    <th>Project Name</th>
    <th>Domain</th>
    <th colspan="3">Actions</th>
  </tr>

<%- can_delete = @client.projects.count > 1 ? true : false %>
<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.domain %></td>
    <td><%= link_to 'Show', client_project_path(@client, project) %></td>
    <td><%= link_to 'Edit', edit_client_project_path(@client, project) %></td>
    <%- if can_delete %>
      <td><%= link_to 'Delete', [@client, project], :confirm => 'Are you sure?', :method => :delete %></td>
    <%- end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_client_project_path %>
