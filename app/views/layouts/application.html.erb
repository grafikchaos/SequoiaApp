<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:page_title) %> | Sequoia App</title>
  <%= stylesheet_link_tag :defaults, :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><%= yield(:display_title) %></h1>
      <%- if current_user %>
        <%= render 'shared/navigation' %>
      <%- end %>
    </div>
    <div id="wrapper" class="wat-cf">
      <div id="main">
        <%- unless flash.empty? %>
          <%= render 'shared/flash', :flash => flash %>
        <%- end %>

        <%= yield %>
      </div>
    </div>
    <%= render 'shared/footer'%>
  </div>
</body>
</html>
