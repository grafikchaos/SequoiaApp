<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %> | Sequoia</title>
  <%= stylesheet_link_tag :defaults, :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <header id="header">
      <h1><%= link_to "Sequoia", root_path %></h1>
      <%- if current_user %>
        <%= render 'shared/navigation' %>
      <%- end %>
      <nav id="main-navigation">
        <ul class="wat-cf">
          <li><%= link_to "Home", root_url %></li>
        </ul>
      </nav>
    </header>    

    <div id="wrapper" class="wat-cf">
      <%- unless flash.empty? %>
        <%= render 'shared/flash', :flash => flash %>
      <%- end %>
      

      <section id="main">
        <%= yield %>
      </section>

      <aside id="sidebar">
        <%= yield :sidebar %>
      </aside>

      <footer id="footer">
        <section class="block">
          <p>Copyright &copy; <%= Time.now.year %> Sequoia App.</p>
        </section>      
      </footer>

    </div>
  </div>
</body>
</html>
