<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:page_title) %> | August Ash Intranet</title>
  <%= stylesheet_link_tag :defaults, :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><%= yield(:display_title) %></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Favorites", favorites_path, :remote => true, :id => 'bookmarks-menu' %></li>
          <%- if current_user and current_user.role? :admin %>
            <li><%= link_to 'Admin', '/admin' %></li>
          <%- end %>
          <li><%= link_to 'Logout', destroy_user_session_path %></li>
        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf"></ul>
      </div>
    </div>
    <div id="wrapper" class="wat-cf">
      <div id="main">
        <%- if flash %>
          <%= render 'shared/flash', :flash => flash %>
        <%- end %>

        <%= yield %>
      </div>
    </div>
    <%= render 'shared/footer'%>
  </div>
</body>
</html>
