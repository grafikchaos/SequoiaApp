<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %> | Sequoia</title>
  <%= stylesheet_link_tag :defaults, :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <header id="header">
      <h1><%= link_to "Sequoia", root_path %></h1>
      <%- if current_user %>
        <%= render 'shared/navigation' %>
      <%- end %>
      <nav id="main-navigation">
        <ul class="wat-cf">
          <li><%= link_to "Home", root_url %></li>
        </ul>
      </nav>
    </header>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <section id="main">
        <%= yield %>
        <footer id="footer">
          <section class="block">
            <p>Copyright &copy; <%= Time.now.year %> Sequoia App.</p>
          </section>      
        </footer>
      </section>
      <section id="sidebar">
        <%= yield :sidebar %>
      </section>
    </div>    
  </div>
</body>
</html>
