<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %> | Sequoia</title>
  <%= stylesheet_link_tag :defaults, :cache => true %>
  <%= javascript_include_tag :defaults, "html5", :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <header id="header">
      <h1><%= link_to "Sequoia", root_path %></h1>
      <%- if current_user %>
        <%= render 'shared/navigation' %>
      <%- end %>
    </header>    

    <div id="wrapper" class="wat-cf">
      <%- unless flash.empty? %>
        <%= render 'shared/flash', :flash => flash %>
      <%- end %>

      <section id="main">
        <a href="javascript:void(0);" id="passgen-link">PassGen</a>
        <%= yield %>
      </section>

      <aside id="sidebar">
        <%= render 'shared/sidebar' %>
      </aside>

      <%= render 'shared/footer' %>
    </div>

  </div>
</body>
</html>
