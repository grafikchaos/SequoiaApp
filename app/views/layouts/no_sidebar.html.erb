<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %> | Sequoia</title>
  <%= stylesheet_link_tag :defaults, :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <header id="header">
      <h1><%= link_to "Sequoia", root_path %></h1>
      <%- if current_user %>
        <%= render 'shared/navigation' %>
      <%- end %>
    </header>    

    <div id="wrapper" class="wat-cf">
      <%- unless flash.empty? %>
        <%= render 'shared/flash', :flash => flash %>
      <%- end %>

      <section id="main" class="no-sidebar">
        <%= yield %>
      </section>
      
      <footer id="footer">
        <section class="block">
          <p>Copyright &copy; <%= Time.now.year %> Sequoia App.</p>
        </section>      
      </footer>
    </div>

  </div>
</body>
</html>