<% content_for :page_title, "Users" %>
<% content_for :display_title, "Users" %>

<%= render 'shared/admin_tabs' %>

<div class="controls">
  <% if can? :create, User %>
    <%= link_to 'New User', new_user_path, :class => 'button' %>
  <% end %>
</div>
<div class='clear'></div>

<table id="users">
<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td>Level <%= user.clearance %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :id => "edit-#{user.username}", :class => 'tooltip edit-link', :title => 'Edit this user' %></td>
    <td>
      <%- if user != current_user %>
        <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :id => "delete-#{user.username}", :class => 'tooltip destroy-link', :title => 'Delete this user' %>
      <%- end %>
    </td>
  </tr>
<% end %>
</table>
