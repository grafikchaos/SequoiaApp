<% content_for :page_title, "Users" %>
<% content_for :display_title, "Users" %>

<%= render 'shared/admin_tabs' %>

<div class="controls">
  <% if can? :create, User %>
    <%= link_to 'New User', new_user_path, :class => 'button' %>
  <% end %>
</div>
<div class='clear'></div>

<table id="users">
<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td>Level <%= user.clearance %></td>
    <td><%= user.role %></td>
    <td><%= edit_link user %></td>
    <td>
      <%- if user != current_user %>
        <%= destroy_link user %>
      <%- end %>
    </td>
  </tr>
<% end %>
</table>
