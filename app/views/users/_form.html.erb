<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field required">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field required">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field required">
    <%= f.label :role %>
    <%= f.select :role, format_roles_select %>
  </div>

  <div class="field required">
    <%= f.label :clearance %>
    <%= f.select :clearance, format_clearance_select %>
  </div>

  <%= field_set_tag "Password", :class => "collapsible" do %>
    <div class="fieldset-wrapper">
      <%- if !@user.new_record? %>
        <div class="description">Leave these blank if you don't want to change the password</div>
      <%- end %>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  <%- end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
