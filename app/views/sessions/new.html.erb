<%= content_for :page_title, 'Login' %>

<div id="box" class="login">

<h2>
  You get nothing<br />
  <span>without signing in</span>
</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form' }) do |f| %>
  <p><%= f.text_field :username, :class => 'text_field', :placeholder => 'Username' %></p>

  <p><%= f.password_field :password, :class => 'text_field', :placeholder => 'Password' %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
<% end %>

</div>
