<%= content_for :page_title, "Editing Favorite" %>
<%= content_for :display_title, "Editing \"#{@favorite.name}:  #{@favorite.note}\"" %>

<section class="block">
  <section class="content">
    <header><h2>Editing <%= @favorite.name %>: <%= @favorite.note %></h2></header>
    <section class="inner">
      <%= form_for(@favorite, :html => { :class => 'form' }, :validate => true) do |f| %>
        <%= render 'form', :f => f %>
      <% end %>
    </section>
  </section>
</section>
