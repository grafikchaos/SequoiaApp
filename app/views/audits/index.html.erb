<% content_for :page_title, "Audit Log" %>

<section class="block">
  <%= render 'shared/admin_tabs' %>

  <section class="content" id="audits">
    <h2 class="title">Audit Log</h2>
    <div class="search">
      <%= render 'search_form' %>
    </div>
    <div class="clear"></div>
    <div class="inner">
      <table id="audits" class="table">
        <tr>
          <th class="first">Time</th>
          <th class="last">Message</th>
        </tr>
      <% @audits.each do |audit| %>
        <tr class="<%= cycle "odd", "even" -%>">
          <td><%= audit.created_at.to_s(:short) %></td>
          <td><%= audit.message %></td>
        </tr>
      <% end %>
      </table>
      <footer class="actions-bar wat-cf">
        <%= paginate @audits %>
      </footer>
    </div>
  </section>
</section>
