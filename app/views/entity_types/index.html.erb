<% content_for :page_title, "Entity Types" %>
<% content_for :display_title, "Entity Types" %>

<div class="controls">
  <% if can? :create, EntityType %>
    <%= link_to 'New Entity Type', new_entity_type_path %>
  <% end %>
</div>
<div class='clear'></div>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Slug</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th colspan='3'>Actions</th>
  </tr>

<% @entity_types.each do |entity_type| %>
  <tr>
    <td><%= entity_type.id %></td>
    <td><%= entity_type.name %></td>
    <td><%= entity_type.cached_slug %></td>
    <td><%= entity_type.created_at %></td>
    <td><%= entity_type.updated_at %></td>
    <td>
      <%- if can? :read, EntityType -%>
        <%= link_to 'Show', entity_type %>
      <%- end -%>
    </td>
    <td>
      <%- if can? :edit, EntityType -%>
        <%= link_to 'Edit', edit_entity_type_path(entity_type) %>
      <%- end -%>
    </td>
    <td>
      <%- if can? :destroy, EntityType -%>
        <%= link_to 'Destroy', entity_type, :confirm => 'Are you sure?', :method => :delete %>
      <%- end -%>
    </td>
  </tr>
<% end %>
</table>